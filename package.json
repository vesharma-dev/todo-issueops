{
  "name": "todo-bot",
  "version": "0.0.1",
  "description": "A GitHub action that automatically creates, updates, and closes GitHub issues from TODO comments in your code.",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc ",
    "clean": "rm -rf dist",
    "test": "jest",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "manual-test": "./scripts/manual-test.sh",
    "emulator": "./scripts/emulator-test.sh",
    "lint": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --config .prettierrc.json",
    "lint:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --config .prettierrc.json"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "github",
    "action",
    "todo",
    "issues",
    "automation"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}
